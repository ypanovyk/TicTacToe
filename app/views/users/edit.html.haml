- provide(:title, t('titles.user_edit_page'))
%h1=t('titles.user_edit_page_h1') 
.row
  .span4.offset1
    = form_for(@user) do |f|
      = render 'shared/error_messages'

      = f.label :name, t('user_edit_form.name_label')
      = f.text_field :name

      = f.label :email, t('user_edit_form.email_label')
      = f.text_field :email
      
      = f.label :password, t('user_edit_form.password_label')
      = f.password_field :password

      = f.label :password_confirmation, t('user_edit_form.confirm_label')
      = f.password_field :password_confirmation

      = f.label :locale, t('user_edit_form.locale_label')
      = f.select :locale, options_for_select([['English','en'],['Ukrainian','ua']], @user.locale)

      = f.submit t('user_edit_form.save_button'), class: "btn btn-large btn-primary"


    = gravatar_for @user
    %a{href:'http://gravatar.com/emails'}=t('user_edit_form.change_gravatar')

